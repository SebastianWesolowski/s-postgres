{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "outDir": "./lib"
  },
  "include": ["@types", "src/**/*.ts"],
  "exclude": [
    "node_modules/**",
    "tools/**",
    "tools/**",
    "./eslint.config.mjs",
    "./eslint.config.strict.mjs",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
